{
  "name": "@hbxcontrols/sync-codes",
  "version": "2.0.2",
  "description": "A set of tools for handling and validating HBX Controls device sync codes",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "rollup -c",
    "build:cjs": "esbuild src/index.js --outfile=dist/index.cjs --format=cjs --platform=node --target=node20",
    "build:esm": "esbuild src/index.js --outfile=dist/index.mjs --format=esm",
    "release": "standard-version && git push --follow-tags && npm publish"
  },
  "author": "Chris Tohill <graphics@hbxcontrols.com>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "rollup": "^4.50.2",
    "standard-version": "^9.5.0"
  },
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  }
}
